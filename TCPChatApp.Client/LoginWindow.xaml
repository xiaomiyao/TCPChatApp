<Window x:Class="TCPChatApp.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login/Register"
        Height="400"
        Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">
    <Grid>
        <!-- Main Content Panel -->
        <Border Background="#3C3F41"
                CornerRadius="10"
                Padding="20"
                Margin="10">
            <StackPanel>
                <TextBlock Text="Welcome"S
                        FontSize="20"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <!-- Username Field -->
                <TextBlock Text="Username"
                           Foreground="White"
                           Margin="0,0,0,5"/>
                <Border Background="#252526"
                        CornerRadius="5"
                        Padding="2">
                    <TextBox x:Name="UsernameInput"
                             Width="250"
                             Height="30"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"/>
                </Border>
                <!-- Password Field -->
                <TextBlock Text="Password"
                           Foreground="White"
                           Margin="10,10,0,5"/>
                <Border Background="#252526"
                        CornerRadius="5"
                        Padding="2">
                    <PasswordBox x:Name="PasswordInput"
                                 Width="250"
                                 Height="30"
                                 Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"/>
                </Border>
                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <Button x:Name="RegisterButton"
                            Content="Register"
                            Width="100"
                            Height="35"
                            Background="#007ACC"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Margin="0,0,10,0"
                            Click="RegisterButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="5">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="LoginButton"
                            Content="Login"
                            Width="100"
                            Height="35"
                            Background="#28A745"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="LoginButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="5">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
