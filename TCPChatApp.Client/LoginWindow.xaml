<Window x:Class="TCPChatApp.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login/Register"
       Height="450"
    Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Username Field -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Username:" Width="80"/>
            <TextBox x:Name="UsernameInput" Width="200"/>
        </StackPanel>

        <!-- Password Field -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Password:" Width="80"/>
            <PasswordBox x:Name="PasswordInput" Width="200"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <Button x:Name="RegisterButton" Content="Register" Width="80" Margin="0,0,10,0"
                    Click="RegisterButton_Click"/>
            <Button x:Name="LoginButton" Content="Login" Width="80"
                    Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
