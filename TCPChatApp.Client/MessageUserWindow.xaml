<Window x:Class="TCPChatApp.Client.MessageUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Window" Height="450" Width="600">
    <Window.Resources>
        <DataTemplate x:Key="MessageTemplate">
            <Border Margin="5" Padding="10" BorderThickness="1" BorderBrush="#DDDDDD" CornerRadius="5">
                <StackPanel>
                    <DockPanel>
                        <TextBlock Text="{Binding Sender}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Timestamp, StringFormat='[{0:HH:mm:ss}]'}" 
                                 Margin="10,0,0,0" Foreground="Gray"/>
                    </DockPanel>
                    <TextBlock Text="{Binding Content}" 
                             TextWrapping="Wrap" 
                             Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Add search filter -->
        <TextBox x:Name="ChatFilter"
                 Grid.Row="0"
                 Margin="0,0,0,10"
                 Height="24"
                 VerticalAlignment="Center"
                 TextChanged="ChatFilter_TextChanged"
                 BorderThickness="1"
                 BorderBrush="#DDDDDD"/>

        <ScrollViewer Grid.Row="1" Margin="0,0,0,10">
            <ListBox x:Name="ChatDisplayListBox" 
                     Background="#F5F5F5"
                     BorderThickness="1"
                     BorderBrush="#DDDDDD"
                     ItemTemplate="{StaticResource MessageTemplate}"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="MessageTextBox" 
                     Grid.Column="0"
                     Height="50"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalAlignment="Center"
                     Margin="0,0,10,0"/>

            <Button x:Name="SendButton"
                    Grid.Column="1"
                    Content="Send"
                    Padding="15,5"
                    Margin="0,0,10,0"
                    Click="Send_Click"/>

            <Button x:Name="CloseButton"
                    Grid.Column="2"
                    Content="Close"
                    Padding="15,5"
                    Click="Close_Click"/>
        </Grid>
    </Grid>
</Window>